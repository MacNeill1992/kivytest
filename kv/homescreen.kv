#:import utils kivy.utils

<HomeScreen>:

    FloatLayout:
        ScrollView:
            pos_hint: {"top": 1, "right": 1}
            size_hint: 1, .1
            Label:
                text: "Scroll view header " * 100
                size_hint_x: 1.0
                size_hint_y: None
                text_size: self.width,None
                height: self.texture_size[1]
        GridLayout:
            pos_hint: {"top": .9, "right": 1}
            size_hint: 1, .2


